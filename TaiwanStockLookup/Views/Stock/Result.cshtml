@model TaiwanStockLookup.Models.StockModel

@{
    ViewData["Title"] = "查詢結果";
}

<div class="container mt-4">
    <h2 class="mb-4">查詢結果</h2>
    
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">
            <h4>錯誤訊息</h4>
            <p>@Model.ErrorMessage</p>
        </div>
    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">@Model.StockName (@Model.StockCode)</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>股票代號:</strong> @Model.StockCode</p>
                                <p><strong>股票名稱:</strong> @Model.StockName</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>收盤價:</strong> 
                                    <span class="fs-4 text-success">NT$ @Model.ClosePrice</span>
                                </p>
                                <p><strong>日期:</strong> @Model.Date</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    
    <div class="row mt-4">
        <div class="col-12 text-center">
            <a asp-action="Index" class="btn btn-secondary">重新查詢</a>
        </div>
    </div>
</div>